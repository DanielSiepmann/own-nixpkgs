# Allow to switch to recent workspace by using same combination
workspace_auto_back_and_forth yes

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2:ðŸ’¶
bindsym $mod+Shift+3 move container to workspace 3:ðŸ’¬
bindsym $mod+Shift+4 move container to workspace 4:âœ‰ï¸
